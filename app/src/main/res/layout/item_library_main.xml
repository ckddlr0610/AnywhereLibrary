<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <View
        android:id="@+id/item_circle"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/circler_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@color/colorWarmGrey"
        app:layout_constraintEnd_toEndOf="@+id/item_circle"
        app:layout_constraintBottom_toBottomOf="@id/item_circle" />

    <TextView
        android:id="@+id/item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        android:textSize="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/item_circle"
        app:layout_constraintStart_toStartOf="@id/item_circle"
        app:layout_constraintEnd_toEndOf="@id/item_circle" />

    <TextView
        android:id="@+id/item_locate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        android:textSize="14dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/item_count"
        app:layout_constraintStart_toStartOf="@id/item_circle"
        app:layout_constraintEnd_toEndOf="@id/item_circle" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.yourssu.anywherelibrary.presentation.library_list.LibraryListViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAzure">

        <TextView
            android:id="@+id/library_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AnywhereLibrary"
            android:textSize="24dp"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/library_main_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AnywhereLibrary"
            android:textSize="12dp"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toBottomOf="@+id/library_main_title"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ranking_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_library"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/library_main_user">

            <TextView
                android:id="@+id/ranking_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ranking"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/ranking_dialog_first_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="16dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ranking_dialog_title"/>

            <TextView
                android:id="@+id/ranking_dialog_first_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7,000h"
                android:textSize="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                app:layout_constraintStart_toEndOf="@+id/ranking_dialog_first_count"
                app:layout_constraintTop_toBottomOf="@+id/ranking_dialog_title"/>

            <TextView
                android:id="@+id/ranking_dialog_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="숭실대학교"
                android:textSize="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintStart_toEndOf="@+id/ranking_dialog_first_time"
                app:layout_constraintTop_toBottomOf="@+id/ranking_dialog_title"/>

            <TextView
                android:id="@+id/ranking_dialog_second_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="16dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ranking_dialog_first_count"/>

            <TextView
                android:id="@+id/ranking_dialog_second_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7,000h"
                android:textSize="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                app:layout_constraintStart_toEndOf="@+id/ranking_dialog_second_count"
                app:layout_constraintTop_toBottomOf="@+id/ranking_dialog_first_count"/>

            <TextView
                android:id="@+id/ranking_dialog_second_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="숭실대학교"
                android:textSize="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintStart_toEndOf="@+id/ranking_dialog_second_time"
                app:layout_constraintTop_toBottomOf="@+id/ranking_dialog_first_count"/>

            <TextView
                android:id="@+id/ranking_dialog_third_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="16dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ranking_dialog_second_count"/>

            <TextView
                android:id="@+id/ranking_dialog_third_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7,000h"
                android:textSize="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                app:layout_constraintStart_toEndOf="@+id/ranking_dialog_third_count"
                app:layout_constraintTop_toBottomOf="@+id/ranking_dialog_second_count"/>

            <TextView
                android:id="@+id/ranking_dialog_third_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="숭실대학교"
                android:textSize="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintStart_toEndOf="@+id/ranking_dialog_third_time"
                app:layout_constraintTop_toBottomOf="@+id/ranking_dialog_second_count"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/bg_library"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ranking_dialog"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/library_welcome_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="123"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/main_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/library_welcome_msg" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>